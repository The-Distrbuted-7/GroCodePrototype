<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="com.example.johanringstrom.mqttc.MainActivity" android:clickable="false" android:columnCount="2"
        android:rowCount="4">

    <Button
            android:onClick="subscribeToTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:id="@+id/subscribe"
            android:layout_alignTop="@+id/unsubscribe"
            android:minWidth="100dp" android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/unsubscribe"/>
    <Button
            android:onClick="unSubscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unsubscribe"
            android:id="@+id/unsubscribe"
            android:layout_row="0" android:layout_column="0"
            android:layout_below="@+id/remove" android:layout_alignEnd="@+id/remove"
            android:minWidth="175dp"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="469dp"
            android:id="@+id/List" android:layout_below="@+id/item"
            android:layout_row="2" android:layout_column="0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:id="@+id/remove"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    <Button
            android:onClick="getList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get list"
            android:id="@+id/getList"
            android:layout_row="1" android:layout_column="0"
            android:layout_above="@+id/subscribe" android:minWidth="150dp"
            android:layout_alignTop="@+id/remove"
            android:layout_toStartOf="@+id/remove" android:layout_toRightOf="@+id/add"/>
    <EditText
            android:background="@drawable/square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="@string/Item"
            android:id="@+id/item"
            android:textAlignment="center"
            android:layout_row="1" android:layout_column="0"
            android:layout_below="@+id/subscribe" android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            android:id="@+id/add"
            android:layout_row="0" android:layout_column="0"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/getList"/>
</RelativeLayout>